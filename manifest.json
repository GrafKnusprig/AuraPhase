{
  "manifest_version": 3,
  "name": "AuraPhase",
  "version": "0.3.0",
  "description": "Orbit-style spatial illusion using panning + Haas delay.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "AuraPhase",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
